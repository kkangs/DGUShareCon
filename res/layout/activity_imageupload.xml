<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1354a5"
    android:orientation="vertical">

    <FrameLayout
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/blank" />

        <ImageView
            android:id="@+id/imgCaptured"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/join_pic" />

    </FrameLayout>

    <EditText
        android:id="@+id/edtImageUploadEmail"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:background="@drawable/group_top"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:padding="5dp"
        android:textSize="7pt" />


    <Button
        android:id="@+id/btnImageUpload"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/btn_signup"
        android:text="Image Upload"
        android:textColor="#fff"
        android:textSize="10pt" />
    
    <Button
        android:id="@+id/startService"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="chathead"
        android:textColor="#fff"
        android:textSize="10pt" />
    
    
    
    

</LinearLayout>